<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.js"></script>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
      }
      #calendar {
        max-width: 900px;
        margin: 0 auto;
      }
    </style>
  </head>
  <body>
    <div id="calendar"></div>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          selectable: true,
          headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek'
          },
          events: [
            {
              title: 'Adult Ballet',
              start: '2025-08-05T18:00:00',
              daysOfWeek: [1], // Monday
              startRecur: '2025-08-01',
              endRecur: '2025-12-31'
            }
          ],
          dateClick: function (info) {
            // Trigger webhook logic here
            fetch("https://hook.us1.make.com/your-webhook-url", {
              method: "POST",
              headers: {
                "Content-Type": "application/json"
              },
              body: JSON.stringify({ date: info.dateStr, class: "TBD" })
            })
              .then(response => console.log("Webhook triggered"))
              .catch(error => console.error("Error:", error));
          }
        });
        calendar.render();
      });
    </script>
  </body>
</html>
